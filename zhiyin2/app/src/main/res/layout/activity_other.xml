<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Other">
    <TextView
        android:id="@+id/textguitarjj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用品介绍"
        android:textSize="20dp"
        android:gravity="top|center"
        android:textColor="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/imagebdj"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@id/textguitarjj"
        app:srcCompat="@drawable/bdj" />
    <TextView
        android:id="@+id/textbdjjj"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="变调夹"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/imagebdj"
        android:textColor="@color/colorPrimary"/>
    <ImageView
        android:id="@+id/imagebp"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textbdjjj"
        app:srcCompat="@drawable/bp" />
    <TextView
        android:id="@+id/textbp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="拨片"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/imagebp"
        android:textColor="@color/colorPrimary"/>
    <ImageView
        android:id="@+id/imagetyq"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@id/textguitarjj"
        android:layout_marginLeft="210dp"
        app:srcCompat="@drawable/tyq" />
    <TextView
        android:id="@+id/texttyqjj"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="调音器"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/imagetyq"
        android:layout_marginLeft="210dp"
        android:textColor="@color/colorPrimary"/>
    <ImageView
        android:id="@+id/imagexn"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="210dp"
        android:layout_below="@id/texttyqjj"
        app:srcCompat="@drawable/xn" />
    <TextView
        android:id="@+id/textxnjj"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="旋钮"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/imagexn"
        android:layout_marginLeft="210dp"
        android:textColor="@color/colorPrimary"/>


</RelativeLayout>