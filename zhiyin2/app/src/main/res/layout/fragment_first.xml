<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"
    android:background="#FFFFFF">



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/itemNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
            <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/zyfm1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <View
                android:id="@+id/line"
                android:layout_width="1dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:text="基本资料"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonteacher"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textinfo"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="教师资料"
                android:background="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonpay"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonteacher"
                android:layout_marginTop="5dp"
                android:background="@android:color/background_light"
                android:gravity="center"
                android:text="费用详情"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonguitar"
                android:layout_width="180dp"
                android:background="@android:color/background_light"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonpay"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="吉他资料"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonother"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:layout_below="@id/buttonguitar"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="用品简介"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttoncourse"
                android:layout_width="180dp"
                android:background="@android:color/background_light"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonother"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="网课资料"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonmarket"
                android:layout_width="180dp"
                android:background="@android:color/background_light"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttoncourse"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="知音商城"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/textinfonow"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="近期活动"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonjune"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textinfo"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:text="六月活动"
                android:background="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonmay"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonteacher"
                android:layout_marginTop="5dp"
                android:background="@android:color/background_light"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="五月活动"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonapril"
                android:layout_width="180dp"
                android:background="@android:color/background_light"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonpay"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:text="四月活动"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonmarch"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:layout_below="@id/buttonguitar"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="三月活动"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonfeburary"
                android:layout_width="180dp"
                android:background="@android:color/background_light"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonother"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:text="二月活动"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonjanuary"
                android:layout_width="180dp"
                android:background="@android:color/background_light"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttoncourse"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:text="一月活动"
                android:textSize="18sp" />


        </RelativeLayout>
        </LinearLayout>
            </ScrollView>
    </LinearLayout>


</FrameLayout>